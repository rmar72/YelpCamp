<% include partials/header%>


<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1> Welcome to Yelp Camp </h1>
            <p>View our global hand-picked campgrounds!</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campground</a>
            </p>
        </div>
    </header>
</div>

<div class="row" style="text-align:center; display:flex; flex-wrap: wrap;">

    <% campgrounds.forEach(function(campground){ %>
        <div class="col-md-3 col-sm-6">
            <div class="thumbnail">
                <img src="<%= campground.image %>" alt="" height="300" width="350">
                
                <div class="caption">
                    <h4><%= campground.name %></h4>
                </div>
            </div>
          
        </div>
    <% }) %>    
</div>



<% include partials/footer%>
